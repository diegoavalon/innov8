<section id="create-user">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<% if notice %>
					<div class="alert alert-success"><%= notice %></div>
				<% end %>	
				<% if current_user.admin? %>
				<h2 class="text-center">Create New User</h2>
					<%= simple_form_for @user do |f| %>
					<%= f.error_notification %>
		
					<div class="form-inputs">
						<%= f.input :fname, required: true %>
						<%= f.input :lname, required: true %>
						<%= f.input :email, required: true %>
						<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
						<%= f.input :password_confirmation, required: true %>
						<%= f.input :admin, as: :select ,inline_label: 'Full-Access (Developers Only)', required: true %>
						<%= f.input :apparel, as: :select, required: true %>
						<%= f.input :footwear, as: :select, required: true %>
						<%= f.input :gloves, as: :select, required: true %>
					</div>
					<br>
					<div class="form-actions">
						<%= f.button :submit, "Sign up" %>
					</div>
					<% end %>
				<% else %>
					
				<h2 class="text-center">
					You are not authorized to proceed.<br> Kindly Go Back.
				</h2>						
				<h5><%=link_to "← Back to Safety", :back %></h5>	
					<% end %>
				<br>
				
			</div>
		</div>
	</div>
</section>
