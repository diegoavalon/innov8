<section id="login">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-6">
					<p class="notice"><%= notice %></p>
				  <p class="alert"><%= alert %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="logo-sign-in">
					<%= image_tag 'Innov8_Logo.png', :alt => 'Innov8 Logo', class: "login-img" %>
				</div>
			</div>
			<div class="col-sm-4 inner-wrapper">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-group form-group-default form-inputs">
				    <%= f.input :email, required: false, autofocus: true, placeholder: 'user@innov8partners.com', input_html: { class: 'form-group-default form-group form-control' }  %>
				  </div>
				  <div>&nbsp;</div>
				  <div class="form-group form-group-default form-inputs">
				    <%= f.input :password, required: false, placeholder: '******', input_html: { class: 'form-group-default form-group form-control' } %>
					</div>
				  <br>

				  <div class="form-actions button-main">
				    <%= f.button :submit, "Sign in" %>
				  </div>
				<% end %>

				<%= link_to "Forgot your password?", new_password_path(resource_name), class: "mute-grey" %>
			</div>	
		</div>
		<footer class="navbar-fixed-bottom">
			<div class="row">
				<div class="col-sm-8 col-sm-offset-2">
					<div class="footer mute-grey">
						<p>Â© 2015 Innov8 Partners, LLC. All rights reserved. Some scary text to prevent unauthorized access or suffer the consequence. dolor sit amet, consectetur adipiscing elit. Ut pretium pretium tempor. Ut eget imperdiet neque.</p>
					</div>
				</div>
			</div>
		</footer>
	</div>
</section>

