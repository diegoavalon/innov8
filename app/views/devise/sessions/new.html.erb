<section id="login">
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-md-offset-2">
				<%= image_tag 'Innov8_Logo.png', :alt => 'Innov8 Logo' %>
			</div>
			<div class="col-sm-4">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class=" form-group form-group-default form-inputs">
				    <%= f.input :email, required: false, autofocus: true, placeholder: 'user@innov8partners.com', input_html: { class: 'form-group-default form-group form-control' }  %>
				  </div>
				  <br>
				  <div class=" form-group form-group-default form-inputs">
				    <%= f.input :password, required: false, placeholder: '******', input_html: { class: 'form-group-default form-group form-control' } %>
					</div>
				  <br>

				  <div class="form-actions button-main">
				    <%= f.button :submit, "Sign in" %>
				  </div>
				<% end %>

				<%= link_to "Forgot your password?", new_password_path(resource_name), class: "center-link" %>
			</div>
			
		</div>
	</div>
</section>

